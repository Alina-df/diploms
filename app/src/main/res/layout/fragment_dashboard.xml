<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootDashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Скролл для всего содержимого -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- === Секция: Моя комната и соседи === -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="МОЯ КОМНАТА"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/roomNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Жители:"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/roommatesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp"/>

            <!-- Разделитель -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"/>

            <!-- === Секция: Прачечная === -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Прачечная"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/laundryStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="○ Свободна"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/editMinutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Минуты"
                android:inputType="number"
                android:visibility="gone"/>

            <Button
                android:id="@+id/buttonOccupy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Занять"/>

            <Button
                android:id="@+id/buttonStartWash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Начать стирку"
                android:visibility="gone"/>

            <Button
                android:id="@+id/buttonReserve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Забронировать"
                android:visibility="gone"/>

            <Button
                android:id="@+id/buttonCancelReserve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Отменить бронь"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/laundryQueueInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textSize="14sp"/>

            <!-- Разделитель -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"/>

            <!-- === Секция: Запрос на услугу === -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Запрос на услугу"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Номер комнаты"
                android:inputType="text"/>

            <EditText
                android:id="@+id/editProblem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Опишите проблему"
                android:inputType="textMultiLine"
                android:lines="3"
                android:maxLines="5"/>

            <Button
                android:id="@+id/buttonSendService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Отправить запрос"/>

            <TextView
                android:id="@+id/serviceInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="#007700"
                android:textSize="14sp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
