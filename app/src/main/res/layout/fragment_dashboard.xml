<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootDashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Первый экран: Моя комната + Дела и расходы + Прачечная -->
    <androidx.cardview.widget.CardView
        android:id="@+id/groupView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- МОЯ КОМНАТА -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Заголовок "МОЯ КОМНАТА" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="МОЯ КОМНАТА"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <!-- Номер комнаты -->
                <TextView
                    android:id="@+id/roomNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1502A"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <!-- Аватарки жильцов -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Аватарка 1 -->
                    <ImageView
                        android:id="@+id/avatar1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar1" />

                    <!-- Имя жильца 1 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="Ярочкина Софья"
                        android:textSize="14sp" />

                    <!-- Аватарка 2 -->
                    <ImageView
                        android:id="@+id/avatar2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar1" />

                    <!-- Имя жильца 2 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="Гайнуллина Аделя"
                        android:textSize="14sp" />

                    <!-- Аватарка 3 -->
                    <ImageView
                        android:id="@+id/avatar3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar1" />

                    <!-- Имя жильца 3 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Волкова Анна"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- ДЕЛА И РАСХОДЫ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Заголовок "ДЕЛА" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ДЕЛА"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <!-- Список дел -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Задача 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Помыть полы"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <!-- Задача 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Выбросить мусор"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <!-- Задача 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Купить продукты"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Заголовок "РАСХОДЫ" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="РАСХОДЫ"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <!-- Список расходов -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Мыло 140 р. (скинуть 70 р.)"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- ПРАЧЕЧНАЯ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Прачечная"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/laundryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Стиралка № 1 ●"
                android:textSize="18sp"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/buttonOccupy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Занять"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Второй экран: Расширенная прачечная -->
    <androidx.cardview.widget.CardView
        android:id="@+id/laundryView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Назад -->
            <Button
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="←"
                android:layout_gravity="start"
                android:background="?android:selectableItemBackground"
                android:padding="8dp"/>

            <!-- Заголовок прачечной -->
            <TextView
                android:id="@+id/laundryExpandedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Стиралка №1 ●"
                android:textSize="18sp"
                android:layout_marginTop="16dp"/>

            <!-- Большой круг-кнопка -->
            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/circle_border">

                <TextView
                    android:id="@+id/buttonStartWash"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Начать\nстирку"
                    android:textSize="18sp" />
            </FrameLayout>

            <!-- Уведомление -->
            <Button
                android:id="@+id/buttonToggleNotify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Вкл. уведомление" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>