<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <!-- Заголовок -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="sans-serif-medium"
                android:text="Давай знакомиться!"
                android:textColor="#0281D5"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Выбор типа пользователя -->
            <RadioGroup
                android:id="@+id/userTypeRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <RadioButton
                    android:id="@+id/radioResident"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Житель"
                    android:textColor="#0281D5"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioEmployee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="Сотрудник"
                    android:textColor="#0281D5"
                    android:textSize="16sp" />
            </RadioGroup>

            <!-- Основной контейнер для полей -->
            <LinearLayout
                android:id="@+id/mainFieldsLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userTypeRadioGroup">

                <!-- Логин -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Логин"
                    android:textColor="#0281D5"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/textUsername"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/card_background"
                    android:hint="Логин"
                    android:inputType="text"
                    android:paddingStart="16dp"
                    android:textColorHint="#78999999"
                    android:textSize="13sp" />

                <!-- Email -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Электронная почта"
                    android:textColor="#0281D5"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/textEmail"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/card_background"
                    android:hint="example@gmail.com"
                    android:inputType="textEmailAddress"
                    android:paddingStart="16dp"
                    android:textColorHint="#78999999"
                    android:textSize="13sp" />

                <!-- Телефон -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Номер телефона"
                    android:textColor="#0281D5"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/textNumber"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/card_background"
                    android:hint="+7 (___) ___-__-__"
                    android:inputType="phone"
                    android:paddingStart="16dp"
                    android:textColorHint="#78999999"
                    android:textSize="13sp" />

                <!-- Пароль -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Пароль"
                    android:textColor="#0281D5"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/card_background"
                    android:hint="Пароль"
                    android:inputType="textPassword"
                    android:paddingStart="16dp"
                    android:textColorHint="#78999999"
                    android:textSize="13sp" />

                <!-- ФИО -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="ФИО"
                    android:textColor="#0281D5"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/textFio"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/card_background"
                    android:hint="Фамилия Имя"
                    android:paddingStart="16dp"
                    android:textColorHint="#78999999"
                    android:textSize="13sp" />

                <!-- Поля для жителей -->
                <LinearLayout
                    android:id="@+id/residentFieldsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <!-- Факультет -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Факультет"
                        android:textColor="#0281D5"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spinnerFaculty"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/card_background"
                        android:paddingStart="16dp" />

                    <!-- Общежитие -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Общежитие"
                        android:textColor="#0281D5"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spinnerDorm"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/card_background"
                        android:paddingStart="13dp" />

                    <!-- Комната -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Комната"
                        android:textColor="#0281D5"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/textRoom"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/card_background"
                        android:hint="203/2"
                        android:paddingStart="16dp"
                        android:textColorHint="#78999999"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Кнопка -->
            <Button
                android:id="@+id/buttonSubmit"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:text="Готово"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mainFieldsLayout" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>