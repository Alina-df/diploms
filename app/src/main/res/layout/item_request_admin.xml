<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:background="@drawable/card_background"
    android:padding="12dp">

    <TextView android:id="@+id/textRoomAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/textProblemAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/textTypeAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/textStatusAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_dark"/>

    <Button
        android:id="@+id/buttonAcceptRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Принять" />

    <Button
        android:id="@+id/buttonReportRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отчёт"
        android:visibility="gone" />
</LinearLayout>
