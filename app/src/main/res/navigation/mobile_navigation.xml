<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.alinadiplom.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_person"
            app:destination="@id/personProfileFragment" >
        </action>
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.alinadiplom.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_dashboard_to_myRequests"
            app:destination="@id/MyRequstsFragment" />
        <action
            android:id="@+id/action_navigation_dashboard_to_laundryQueueFragment"
            app:destination="@id/laundryQueueFragment" />
    </fragment>

    <!-- Заменяем Notifications на Profile -->
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.alinadiplom.ui.profile.ProfileFragment"
        android:label="Профиль"
        tools:layout="@layout/fragment_notifications">
        <action
            android:id="@+id/action_profile_to_settings"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_navigation_profile_to_AdminFragment"
            app:destination="@id/AdminFragment" />
    </fragment>

    <!-- Настройки -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.alinadiplom.ui.settings.SettingsFragment"
        android:label="Настройки"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_DormInfoFragment"
            app:destination="@id/DormInfoFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_NotificationsSettingsFragment"
            app:destination="@id/NotificationsSettingsFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_AccountSettingsFragment"
            app:destination="@id/AccountSettingsFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_HelpFragment"
            app:destination="@id/HelpFragment" />
    </fragment>
    <fragment
        android:id="@+id/personProfileFragment"
        android:name="com.example.alinadiplom.ui.profile.PersonProfileFragment"
        android:label="Человек"
        tools:layout="@layout/fragment_person_profile" >
        <action
            android:id="@+id/action_to_chat_list"
            app:destination="@id/ChatListFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_admin_requests"
        android:name="com.example.alinadiplom.FragmentUsersList"
        android:label="@string/title_admin_requests"
        tools:layout="@layout/fragment_admin_requests" />
    <fragment
        android:id="@+id/AskedUsersListFragment"
        android:name="com.example.alinadiplom.ui.profile.AskedUsersListFragment"
        android:label="@string/title_admin_requests"
        tools:layout="@layout/fragment_asked_users_list" />
    <fragment
        android:id="@+id/ChatListFragment"
        android:name="com.example.alinadiplom.ui.home.ChatListFragment"
        android:label="@string/title_admin_requests"
        tools:layout="@layout/fragment_chat_list" />
    <fragment
        android:id="@+id/NotificationsSettingsFragment"
        android:name="com.example.alinadiplom.ui.settings.NotificationsSettingsFragment"
        android:label="@string/title_admin_requests"
        tools:layout="@layout/fragment_notifications_settings" />
    <fragment
        android:id="@+id/AccountSettingsFragment"
        android:name="com.example.alinadiplom.ui.settings.AccountSettingsFragment"
        android:label="@string/title_admin_requests"
        tools:layout="@layout/fragment_account_settings" >
        <action
            android:id="@+id/action_AccountSettingsFragment_to_AccountFragment"
            app:destination="@id/AccountFragment" />
        <action
            android:id="@+id/action_AccountSettingsFragment_to_ResetPasswordFragment"
            app:destination="@id/ResetPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/HelpFragment"
        android:name="com.example.alinadiplom.ui.settings.HelpFragment"
        android:label="@string/title_admin_requests"
        tools:layout="@layout/fragment_help" >
        <action
            android:id="@+id/action_HelpFragment_to_FaqInfoFragment"
            app:destination="@id/FaqInfoFragment" />

    </fragment>
    <fragment
        android:id="@+id/DormInfoFragment"
        android:name="com.example.alinadiplom.ui.profile.DormInfoFragment"
        android:label="@string/title_admin_requests"
        tools:layout="@layout/fragment_dorm_info" />
    <fragment
        android:id="@+id/AccountFragment"
        android:name="com.example.alinadiplom.ui.settings.AccountFragment"
        android:label="@string/title_admin_requests"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/ResetPasswordFragment"
        android:name="com.example.alinadiplom.ui.settings.ResetPasswordFragment"
        android:label="@string/title_admin_requests"
        tools:layout="@layout/fragment_reset_password" />
    <fragment
        android:id="@+id/FaqInfoFragment"
        android:name="com.example.alinadiplom.ui.settings.FaqInfoFragment"
        android:label="FAQ"
        tools:layout="@layout/fragment_faq_info"/>
    <fragment
        android:id="@+id/MyRequstsFragment"
        android:label="MyRequest"
        android:name="com.example.alinadiplom.ui.dashboard.MyRequestsFragment"
        tools:layout="@layout/fragment_my_requests"/>
    <fragment
        android:id="@+id/RequestsManagementFragment"
        android:label="RequestsManagement"
        android:name="com.example.alinadiplom.ui.profile.RequestsManagementFragment"
        tools:layout="@layout/fragment_requests_management"/>
    <fragment
        android:name="com.example.alinadiplom.ui.profile.AdminFragment"
        android:id="@+id/AdminFragment"
        android:label="AdminPanel"
        tools:layout="@layout/fragment_admin">
        <action
            android:id="@+id/action_AdminFragment_to_navigation_admin_requests"
            app:destination="@id/navigation_admin_requests" />
        <action
            android:id="@+id/action_AdminFragment_to_RequestsManagementFragment"
            app:destination="@id/RequestsManagementFragment" />
        <action
            android:id="@+id/action_AdminFragment_to_AskedUsersListFragment"
            app:destination="@id/AskedUsersListFragment" />
        <action
            android:id="@+id/action_AdminFragment_to_ReportFragment"
            app:destination="@id/ReportFragment" />
    </fragment>
    <fragment
        android:id="@+id/laundryQueueFragment"
        android:name="com.example.alinadiplom.ui.dashboard.LaundryQueueFragment"
        android:label="Очередь стиралки"
        tools:layout="@layout/fragment_laundry_queue"/>
    <fragment
        android:id="@+id/ReportFragment"
        android:name="com.example.alinadiplom.ui.profile.ReportFragment"
        android:label="@string/title_admin_requests"
        tools:layout="@layout/fragment_report" />
</navigation>