<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Фоновый цвет -->
    <solid android:color="@android:color/white"/>

    <!-- Граница -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC"/>

    <!-- Скругленные углы -->
    <corners android:radius="8dp"/>

    <!-- Дополнительный внутренний отступ (padding) -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>
